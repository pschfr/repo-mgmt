extends layout

block content
  .container-lg.clearfix
    h1= title
    each repo in repos
      .col-4.float-left.border.p-4
        h3.mb-1
          a(href=repo.html_url target="_blank")= repo.name
        if repo.homepage
          p.mb-1
            a(href=repo.homepage target="_blank")= repo.homepage
        p.my-3= repo.description
        hr.my-3
        .clearfix
          .col-6.float-left
            if repo.language
              != octicons.ruby.toSVG()
              strong  Language:
              br
              = repo.language
          .col-6.float-left
            if repo.license
              != octicons.law.toSVG()
              strong  License:
              br
              = repo.license.spdx_id
